<Window x:Class="dll_gui.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dll_gui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="430" Margin="10,10,0,0" VerticalAlignment="Top" Width="780">
            <Slider x:Name="ad_slider" HorizontalAlignment="Left" Height="20" Margin="26,33,0,0" VerticalAlignment="Top" Width="181" >
                <Slider.Value>
                    <Binding Path="X" />
                </Slider.Value>
            </Slider>
            <TextBox HorizontalAlignment="Left" Height="20" Margin="212,33,0,0" TextWrapping="Wrap" Text="{Binding ElementName=ad_slider, Path=Value}" VerticalAlignment="Top" Width="74"/>
        </Grid>

    </Grid>
</Window>
